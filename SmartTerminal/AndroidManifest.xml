<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smartterminal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="9" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.smartterminal.main.activity.MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 测试activity，用于测试TabPage wedgit -->

        <activity
            android:name="com.example.smartterminal.test.activity.Activity1"
            android:label="@string/title_activity_activity1" >
        </activity>
        <activity
            android:name="com.example.smartterminal.test.activity.Activity2"
            android:label="@string/title_activity_activity2" >
        </activity>
        <activity
            android:name="com.example.smartterminal.test.activity.Activity3"
            android:label="@string/title_activity_activity3" >
        </activity>
        <activity
            android:name="com.example.smartterminal.main.widget.TabPageWithTabsActivity"
            android:label="@string/title_activity_tab_page_with_tabs" >
        </activity>
    </application>

</manifest>