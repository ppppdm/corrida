<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fill_component"
    android:background="@color/st__global__theme_color"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/vertical_component"
        android:layout_weight="60"
        android:background="#202020"
        android:baselineAligned="false" >

        <RelativeLayout
            style="@style/horizontal_component"
            android:layout_weight="130"
            android:padding="5px" >

            <ImageView
                android:layout_width="120px"
                android:layout_height="60px"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:src="@drawable/st__main__img__logo" />
        </RelativeLayout>

        <LinearLayout
            style="@style/horizontal_component"
            android:layout_weight="300"
            android:paddingLeft="8px"
            android:paddingRight="8px" >

            <RelativeLayout
                style="@style/horizontal_component"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="32px"
                    android:layout_height="32px"
                    android:layout_centerInParent="true"
                    android:src="@drawable/st__main__icon__light_green" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/horizontal_component"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="32px"
                    android:layout_height="32px"
                    android:layout_centerInParent="true"
                    android:src="@drawable/st__main__icon__light_red" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/horizontal_component"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="32px"
                    android:layout_height="32px"
                    android:layout_centerInParent="true"
                    android:src="@drawable/st__main__icon__light_green" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/horizontal_component"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="32px"
                    android:layout_height="32px"
                    android:layout_centerInParent="true"
                    android:src="@drawable/st__main__icon__light_red" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/horizontal_component"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="32px"
                    android:layout_height="32px"
                    android:layout_centerInParent="true"
                    android:src="@drawable/st__main__icon__light_green" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/horizontal_component"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="32px"
                    android:layout_height="32px"
                    android:layout_centerInParent="true"
                    android:src="@drawable/st__main__icon__light_red" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/horizontal_component"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="32px"
                    android:layout_height="32px"
                    android:layout_centerInParent="true"
                    android:src="@drawable/st__main__icon__light_green" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/horizontal_component"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="32px"
                    android:layout_height="32px"
                    android:layout_centerInParent="true"
                    android:src="@drawable/st__main__icon__light_red" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/horizontal_component"
            android:layout_weight="180"
            android:paddingLeft="20px"
            android:paddingRight="20px" >

            <RelativeLayout
                style="@style/horizontal_component"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="32px"
                    android:layout_height="32px"
                    android:layout_centerInParent="true"
                    android:src="@drawable/st__main__status__icon__net" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/horizontal_component"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="32px"
                    android:layout_height="32px"
                    android:layout_centerInParent="true"
                    android:src="@drawable/st__main__status__icon__message" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/horizontal_component"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="32px"
                    android:layout_height="32px"
                    android:layout_centerInParent="true"
                    android:src="@drawable/st__main__status__icon__call" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/horizontal_component"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="32px"
                    android:layout_height="32px"
                    android:layout_centerInParent="true"
                    android:src="@drawable/st__main__status__icon__photo" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            style="@style/horizontal_component"
            android:layout_weight="190"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center|center_vertical"
                android:text="11:42  上午"
                android:textColor="#fff"
                android:textSize="30px"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/vertical_component"
        android:layout_weight="420" >

        <RelativeLayout
            style="@style/horizontal_component"
            android:layout_weight="700" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:padding="10px" >

                <LinearLayout
                    style="@style/vertical_component"
                    android:layout_weight="360"
                    android:background="@drawable/st__main__bg__orange_stroke"
                    android:padding="2px" >

                    <android.support.v4.view.ViewPager
                        android:id="@+id/page_container"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    style="@style/vertical_component"
                    android:layout_weight="40" >

                    <Button
                        android:id="@+id/home"
                        style="@style/horizontal_component"
                        android:layout_weight="1"
                        android:background="@drawable/st__main__btn__tab"
                        android:text="首页" />

                    <Button
                        android:id="@+id/monitor"
                        style="@style/horizontal_component"
                        android:layout_weight="1"
                        android:background="@drawable/st__main__btn__tab"
                        android:text="监视" />

                    <Button
                        android:id="@+id/household_electrical_appliances"
                        style="@style/horizontal_component"
                        android:layout_weight="1"
                        android:background="@drawable/st__main__btn__tab"
                        android:text="家电" />

                    <Button
                        android:id="@+id/service"
                        style="@style/horizontal_component"
                        android:layout_weight="1"
                        android:background="@drawable/st__main__btn__tab"
                        android:text="服务" />

                    <Button
                        android:id="@+id/fun"
                        style="@style/horizontal_component"
                        android:layout_weight="1"
                        android:background="@drawable/st__main__btn__tab"
                        android:text="娱乐" />

                    <Button
                        android:id="@+id/search"
                        style="@style/horizontal_component"
                        android:layout_weight="1"
                        android:background="@drawable/st__main__btn__tab"
                        android:text="查询" />

                    <Button
                        android:id="@+id/settings"
                        style="@style/horizontal_component"
                        android:layout_weight="1"
                        android:background="@drawable/st__main__btn__tab"
                        android:text="设置" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            style="@style/horizontal_component"
            android:layout_weight="100"
            android:orientation="vertical"
            android:paddingTop="10px" >

            <LinearLayout
                style="@style/vertical_component"
                android:layout_weight="1" >

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="离家布防"
                    android:textSize="20px" />
            </LinearLayout>

            <LinearLayout
                style="@style/vertical_component"
                android:layout_weight="1" >

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="在家布防"
                    android:textSize="20px" />
            </LinearLayout>

            <LinearLayout
                style="@style/vertical_component"
                android:layout_weight="1" >

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="撤防"
                    android:textSize="20px" />
            </LinearLayout>

            <LinearLayout
                style="@style/vertical_component"
                android:layout_weight="1" >

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="紧急"
                    android:textSize="20px" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>